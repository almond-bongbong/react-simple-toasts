    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/react-transition-group": "^4.2.2",
    "cross-env": "^5.1.4",
    "gh-pages": "^4.0.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "rollup": "^3.10.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
